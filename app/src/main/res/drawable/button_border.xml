<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- black border -->
            <corners android:radius="10dp" /> <!-- rounded corners -->
        </shape>
    </item>
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#CBC3E3" /> <!-- light purple background -->
            <corners android:radius="8dp" /> <!-- rounded corners -->
        </shape>
    </item>
</layer-list>